component ValueEditor {
    prop mut int& value;

    def add(int i) : void {
        value += i;
    }

    view {
        <div style="display: flex; gap: 10px; margin-top: 10px;">
            <button onclick={add(1)}>"Ref +"</button>
            <button onclick={add(-1)}>"Ref -"</button>
        </div>
    }
}
