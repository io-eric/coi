import "../components/Button.coi";

component Hero {
    mut string popupDisplay = "none";

    def openPopup() : void {
        popupDisplay = "flex";
    }

    def closePopup() : void {
        popupDisplay = "none";
    }

    style {
        .hero {
            text-align: center;
            padding: 180px 20px 120px;
            max-width: 900px;
            margin: 0 auto;
        }
        .logo {
            width: 180px;
            height: auto;
            margin: 0 auto 40px auto;
            filter: drop-shadow(0 20px 40px rgba(148, 119, 255, 0.2));
        }
        h1 {
            font-size: 72px;
            font-weight: 800;
            margin: 0 0 24px 0;
            letter-spacing: -2px;
            line-height: 1.1;
            background: linear-gradient(135deg, #1a1a1a 30%, #9477ff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            color: #1a1a1a;
        }
        .tagline {
            font-size: 24px;
            color: #666;
            margin: 0 auto 32px auto;
            line-height: 1.5;
            max-width: 600px;
        }
        .buttons {
            display: flex;
            gap: 16px;
            justify-content: center;
        }
        .subtitle {
            font-size: 20px;
            font-weight: 500;
            color: #4a4a4a;
            margin: -5px 0 24px 0;
            letter-spacing: -0.2px;
        }
        .built-with {
            margin-top: 48px;
            font-size: 13px;
            color: #9477ff;
            opacity: 0.8;
            font-weight: 500;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }
        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(4px);
        }
        .popup {
            background: white;
            padding: 40px;
            border-radius: 20px;
            max-width: 420px;
            text-align: center;
            box-shadow: 0 20px 60px rgba(0,0,0,0.2);
            animation: popupIn 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
        }
        @keyframes popupIn {
            from { opacity: 0; transform: scale(0.95); }
            to { opacity: 1; transform: scale(1); }
        }
        .popup h3 {
             font-size: 24px;
             margin: 0 0 16px 0;
             color: #1a1a1a;
        }
        .popup p {
            color: #666;
            margin: 0 0 32px 0;
            line-height: 1.6;
            font-size: 16px;
        }

        @media (max-width: 768px) {
            .hero {
                padding: 120px 20px 60px;
            }
            .logo {
                width: 160px;
                margin-bottom: 24px;
            }
            h1 {
                font-size: 48px;
                letter-spacing: -1px;
            }
            .tagline {
                font-size: 18px;
            }
            .buttons {
                flex-direction: column;
                width: 100%;
                max-width: 320px;
                margin: 0 auto;
            }
            button {
                width: 100%;
                padding: 16px 20px;
                font-size: 18px;
            }
            .popup {
                width: 90%;
                max-width: 420px;
                padding: 24px;
            }
        }
    }

    view {
        <div class="hero">
            <img class="logo" src="assets/images/logo.png" alt="Coi logo" />
            <h1>Coi</h1>
            <p class="subtitle">WebAssembly for the Modern Web</p>
            <p class="tagline">A component-based language for high-performance web apps.<br/>Fast. Minimal. Type-safe.</p>
            <div class="buttons">
                <Button label="Get Started" type="primary" &onclick={openPopup} />
                <Button label="GitHub" type="secondary" href="https://github.com/io-eric/coi"/>
            </div>
            <p class="built-with">âœ¨ This site is built with Coi</p>

            <div class="popup-overlay" style="display: ${popupDisplay};">
                 <div class="popup">
                    <h3>Work in Progress ðŸš§</h3>
                    <p>This section is not finished yet... but you can look into the demos below or in the git repository to get a good start with this language :D</p>
                    <Button label="Got it!" type="primary" &onclick={closePopup} />
                 </div>
            </div>
        </div>
    }
}
