// Test: Multiple components with same-named data types don't conflict
// Each component's types should be prefixed with the component name

pod GlobalData {
    string global;
}

component First {
    pod LocalData {
        int value;
    }
    
    mut LocalData local;
    mut GlobalData global;
    
    init {
        local = LocalData{42};
        global = GlobalData{"first"};
    }
    
    view {
        <div>First: {local.value}, {global.global}</div>
    }
}

component Second {
    pod LocalData {
        string text;
    }
    
    mut LocalData local;
    mut GlobalData global;
    
    init {
        local = LocalData{"hello"};
        global = GlobalData{"second"};
    }
    
    view {
        <div>Second: {local.text}, {global.global}</div>
    }
}

component Container {
    view {
        <div>
            <First/>
            <Second/>
        </div>
    }
}

app {
    root = Container;
}
