component App {
  mut int clipped_hits = 0;
  mut int unclipped_hits = 0;

  def hitClipped() : void { clipped_hits += 1; }
  def hitUnclipped() : void { unclipped_hits += 1; }

  style {
    html, body {
      margin: 0;
      padding: 0;
      background: #0f1117;
      color: #e8e8e8;
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
    }
    .root {
      width: 100vw;
      height: 100vh;
      box-sizing: border-box;
      padding: 32px;
    }
    .status {
      display: inline-block;
      padding: 12px 14px;
      border-radius: 12px;
      border: 2px solid rgba(144, 238, 144, 0.55);
      background: rgba(30, 60, 30, 0.55);
      user-select: none;
    }
    .row { display: flex; gap: 28px; margin-top: 22px; }
    .panel {
      width: 460px;
      height: 260px;
      border-radius: 20px;
      border: 6px solid rgba(255,255,255,0.10);
      padding: 16px;
      box-sizing: border-box;
      background: rgba(255,255,255,0.04);
      user-select: none;
    }
    .clip { overflow: hidden; }
    .title { opacity: 0.85; font-size: 14px; }
    .target {
      width: 100%;
      height: 360px;
      margin-top: 14px;
      border-radius: 22px;
      border: 8px solid rgba(255,255,255,0.10);
      box-sizing: border-box;
      background: rgba(130, 210, 255, 0.10);
    }
    .targetA { border-color: rgba(255, 166, 128, 0.35); background: rgba(255, 166, 128, 0.10); }
    .targetB { border-color: rgba(120, 255, 170, 0.28); background: rgba(120, 255, 170, 0.10); }
    .pad { padding: 12px; }
  }

  view {
    <div class="root root">
      <div class="status status">clip click test: clipped={clipped_hits} unclipped={unclipped_hits}</div>
      <div class="row">
        <div class="panel clip">
          <div class="title">clipped (overflow: hidden)</div>
          <div class="target targetA" onclick={hitClipped}><div class="pad">clickable child (taller than container)</div></div>
        </div>
        <div class="panel">
          <div class="title">unclipped (overflow: visible)</div>
          <div class="target targetB" onclick={hitUnclipped}><div class="pad">clickable child (taller than container)</div></div>
        </div>
      </div>
    </div>
  }
}

app { root = App; }

