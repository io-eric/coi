{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Coi",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#module-definition"
    },
    {
      "include": "#app-definition"
    },
    {
      "include": "#component-definition"
    },
    {
      "include": "#pod-definition"
    },
    {
      "include": "#function-definition"
    },
    {
      "include": "#prop-definition"
    },
    {
      "include": "#tick-definition"
    },
    {
      "include": "#init-definition"
    },
    {
      "include": "#mount-definition"
    },
    {
      "include": "#style-block"
    },
    {
      "include": "#router-block"
    },
    {
      "include": "#view-block"
    },
    {
      "include": "#component-reference"
    },
    {
      "include": "#function-call"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.coi",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.coi",
          "match": "\\b(component|pod|def|view|return|if|else|for|while|computed|tick|init|mount|app|import|module|struct|style|type|in|root|extends|enum|key|router|route)\\b"
        },
        {
          "name": "storage.modifier.coi",
          "match": "\\b(mut|pub|shared)\\b"
        },
        {
          "name": "storage.type.annotation.coi",
          "match": "@(nocopy|builtin|inline|map|intrinsic|alias)\\b"
        },
        {
          "name": "constant.numeric.coi",
          "match": "\\b[0-9]+\\.?[0-9]*\\b"
        },
        {
          "name": "constant.language.boolean.coi",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.coi",
          "match": "\\b(view|tick|prop|app)\\b"
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "comment": "Method calls like obj.method() or Type.method()",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\.([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "variable.other.object.coi" },
            "2": { "name": "entity.name.function.coi" }
          }
        },
        {
          "comment": "Standalone function calls (excluding keywords like if, else, for, while)",
          "match": "\\b(?!(?:if|else|for|while|return|component|def|view|tick|init|mount|app|import|struct|style|type|global|in|computed|enum|key)\\b)([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.coi" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.coi",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.arrow.coi",
          "match": "=>"
        },
        {
          "name": "keyword.operator.move.coi",
          "match": ":=|(?<=\\s|\\(|,):(?=\\w)"
        },
        {
          "name": "keyword.operator.reference.coi",
          "match": "&(?=\\w)"
        },
        {
          "name": "keyword.operator.assignment.coi",
          "match": "=|\\+=|-=|\\*=|/=|%="
        },
        {
          "name": "keyword.operator.comparison.coi",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.coi",
          "match": "&&|\\|\\||!"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.coi",
          "match": "\\b(int|int8|int16|int32|int64|uint8|uint16|uint32|uint64|float|float32|float64|void|string|bool)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.coi",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.coi",
          "match": "\\\\."
        }
      ]
    },
    "module-definition": {
      "comment": "Module declaration: module Name;",
      "match": "\\b(module)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*;",
      "captures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "entity.name.namespace.coi" }
      }
    },
    "component-definition": {
      "match": "\\b(component)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "entity.name.type.class.coi" }
      }
    },
    "pod-definition": {
      "match": "\\b(pod)\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "entity.name.type.class.coi" }
      }
    },
    "component-reference": {
      "match": "\\b([A-Z][A-Za-z0-9_]*)\\b",
      "captures": {
        "1": { "name": "support.class.component.coi" }
      }
    },
    "prop-definition": {
      "match": "\\b(prop)\\b",
      "captures": {
        "1": { "name": "keyword.control.coi" }
      }
    },
    "tick-definition": {
      "match": "\\b(tick)\\b",
      "captures": {
        "1": { "name": "keyword.control.coi" }
      }
    },
    "init-definition": {
      "begin": "\\b(init)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#function-call" },
        { "include": "#strings" },
        { "include": "#types" },
        { "include": "#component-reference" }
      ]
    },
    "mount-definition": {
      "begin": "\\b(mount)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#function-call" },
        { "include": "#strings" },
        { "include": "#types" },
        { "include": "#component-reference" }
      ]
    },
    "style-block": {
      "begin": "\\b(style)\\s*(global)?\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "name": "meta.embedded.block.css",
      "patterns": [{ "include": "source.css" }]
    },
    "function-definition": {
      "match": "\\b(def)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "storage.type.function.coi" },
        "2": { "name": "entity.name.function.coi" }
      }
    },
    "router-block": {
      "begin": "\\b(router)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        {
          "comment": "Route definition: \"/path\" => Component",
          "match": "(\"[^\"]*\")\\s*(=>)\\s*([A-Z][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "string.quoted.double.coi" },
            "2": { "name": "keyword.operator.arrow.coi" },
            "3": { "name": "support.class.component.coi" }
          }
        },
        {
          "comment": "Route with props: \"/path\" => Component(props)",
          "begin": "(\"[^\"]*\")\\s*(=>)\\s*([A-Z][A-Za-z0-9_]*)\\s*\\(",
          "beginCaptures": {
            "1": { "name": "string.quoted.double.coi" },
            "2": { "name": "keyword.operator.arrow.coi" },
            "3": { "name": "support.class.component.coi" }
          },
          "end": "\\)",
          "patterns": [
            { "include": "#operators" },
            { "include": "#strings" },
            { "include": "#component-reference" },
            {
              "name": "variable.other.coi",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            }
          ]
        },
        { "include": "#strings" }
      ]
    },
    "view-block": {
      "begin": "\\b(view)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#view-control-tags" },
        { "include": "#view-element-tags" },
        { "include": "#view-attribute-value" },
        { "include": "#view-text-interpolation" },
        { "include": "#comments" }
      ]
    },
    "view-text-interpolation": {
      "comment": "Expression interpolation in text content: {expression}",
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.section.embedded.begin.coi" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.embedded.end.coi" }
      },
      "contentName": "meta.embedded.expression.coi",
      "patterns": [
        {
          "name": "keyword.operator.comparison.coi",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.coi",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.coi",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.ternary.coi",
          "match": "\\?|:"
        },
        {
          "name": "constant.numeric.coi",
          "match": "\\b[0-9]+\\.?[0-9]*\\b"
        },
        {
          "name": "constant.language.boolean.coi",
          "match": "\\b(true|false)\\b"
        },
        {
          "include": "#strings"
        },
        {
          "name": "variable.other.coi",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "view-control-tags": {
      "patterns": [
        {
          "comment": "For loop with in keyword, range, and optional key: <for i in 0:count key={id}>",
          "begin": "(<)(for)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s+(in)\\s+",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" },
            "3": { "name": "variable.other.coi" },
            "4": { "name": "keyword.control.coi" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.coi" }
          },
          "patterns": [
            {
              "comment": "key attribute",
              "match": "(key)\\s*=\\s*\\{([^}]+)\\}",
              "captures": {
                "1": { "name": "keyword.control.key.coi" },
                "2": { "name": "variable.other.coi" }
              }
            },
            {
              "comment": "Range expression with colon",
              "match": "([a-zA-Z0-9_]+)(:)([a-zA-Z0-9_]+)",
              "captures": {
                "1": { "name": "variable.other.coi" },
                "2": { "name": "keyword.operator.range.coi" },
                "3": { "name": "variable.other.coi" }
              }
            },
            {
              "comment": "Array/iterable reference",
              "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
              "name": "variable.other.coi"
            }
          ]
        },
        {
          "comment": "Raw tag: <raw> ... </raw>",
          "match": "(<)(raw)\\b",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" }
          }
        },
        {
          "comment": "Opening control flow tags: <if, <else",
          "match": "(<)(if|else)\\b",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" }
          }
        },
        {
          "comment": "Closing control flow tags: </if>, </else>, </for>",
          "match": "(</)(if|else|for|raw)(>)",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" },
            "3": { "name": "punctuation.definition.tag.coi" }
          }
        },
        {
          "comment": "If tag with condition: <if condition>",
          "begin": "(<)(if)\\s+",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.coi" }
          },
          "patterns": [{ "include": "#view-condition" }]
        },
        {
          "comment": "Else tag",
          "match": "(<)(else)(>)",
          "captures": {
            "1": { "name": "punctuation.definition.tag.coi" },
            "2": { "name": "keyword.control.coi" },
            "3": { "name": "punctuation.definition.tag.coi" }
          }
        }
      ]
    },
    "view-condition": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.coi",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.coi",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "constant.language.boolean.coi",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.numeric.coi",
          "match": "\\b[0-9]+\\.?[0-9]*\\b"
        },
        {
          "name": "string.quoted.double.coi",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "variable.other.coi",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "view-element-tags": {
      "patterns": [
        {
          "match": "(</?)([A-Za-z0-9:-]+)",
          "captures": {
            "1": { "name": "punctuation.definition.tag" },
            "2": { "name": "entity.name.tag" }
          }
        },
        {
          "match": "/?>",
          "name": "punctuation.definition.tag"
        },
        {
          "name": "entity.other.attribute-name.event",
          "match": "\\b(on[a-zA-Z]+)\\s*=",
          "captures": {
            "1": { "name": "support.function.event-handler" }
          }
        },
        {
          "name": "entity.other.attribute-name",
          "match": "\\b([A-Za-z0-9_-]+)="
        },
        {
          "include": "#view-attribute-value"
        },
        {
          "include": "#strings"
        }
      ]
    },
    "view-attribute-value": {
      "comment": "Expression in curly braces as attribute value: attr={expression}",
      "begin": "(=)(\\{)",
      "beginCaptures": {
        "1": { "name": "punctuation.separator.key-value" },
        "2": { "name": "punctuation.section.embedded.begin.coi" }
      },
      "end": "(\\})",
      "endCaptures": {
        "1": { "name": "punctuation.section.embedded.end.coi" }
      },
      "contentName": "meta.embedded.expression.coi",
      "patterns": [
        {
          "name": "keyword.operator.comparison.coi",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.coi",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.coi",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.ternary.coi",
          "match": "\\?|:"
        },
        {
          "name": "constant.numeric.coi",
          "match": "\\b[0-9]+\\.?[0-9]*\\b"
        },
        {
          "name": "constant.language.boolean.coi",
          "match": "\\b(true|false)\\b"
        },
        {
          "include": "#strings"
        },
        {
          "name": "variable.other.coi",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "expression-interpolation": {
      "begin": "\\{",
      "end": "\\}",
      "patterns": [
        { "include": "$self" },
        {
          "name": "keyword.operator.ternary.coi",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.ternary.coi",
          "match": ":"
        }
      ]
    },
    "app-definition": {
      "begin": "\\b(app)\\s*\\{",
      "beginCaptures": {
        "1": { "name": "keyword.control.coi" }
      },
      "end": "\\}",
      "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#component-reference" },
        { "include": "#strings" },
        { "include": "#expression-interpolation" },
        { "include": "#types" }
      ]
    },
    "computed-property": {
      "match": "\\b(computed)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*\\(\\s*\\)\\s*:\\s*([A-Za-z_][A-Za-z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.control.coi" },
        "2": { "name": "entity.name.function.coi" },
        "3": { "name": "storage.type.coi" }
      }
    }
  },
  "scopeName": "source.coi"
}
