{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "<", "close": ">", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "<", "close": ">" }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\{[^}]*$|<[a-zA-Z]([^>]*[^/])?>(?!.*</)",
    "decreaseIndentPattern": "^\\s*\\}|^\\s*</[a-zA-Z]"
  },
  "folding": {
    "markers": {
      "start": "^\\s*(component|view|style|init|mount|tick|def)\\s*.*\\{\\s*$",
      "end": "^\\s*\\}"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
