{
  "name": "coi-language",
  "displayName": "COI Language",
  "description": "Language support for COI - syntax highlighting, completions, hover, signature help, and formatting",
  "version": "0.1.5",
  "publisher": "coi-lang",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/io-eric/coi.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:coi"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "coi",
        "aliases": ["COI", "Coi", "coi"],
        "extensions": [".coi", ".d.coi"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "coi",
        "scopeName": "source.coi",
        "path": "./syntaxes/coi.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "COI",
      "properties": {
        "coi.definitionsPath": {
          "type": "string",
          "default": "",
          "description": "Path to COI definition files (.d.coi). Leave empty to use bundled definitions."
        },
        "coi.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable COI document formatting."
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.22.0"
  }
}

