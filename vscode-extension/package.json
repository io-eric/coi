{
  "name": "coi-language",
  "displayName": "Coi Language",
  "description": "Language support for Coi - syntax highlighting, completions, hover, signature help, and formatting",
  "version": "0.1.16",
  "publisher": "coi-lang",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/io-eric/coi.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:coi",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "coi",
        "aliases": [
          "Coi",
          "COI",
          "coi"
        ],
        "extensions": [
          ".coi",
          ".d.coi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "coi",
        "scopeName": "source.coi",
        "path": "./syntaxes/coi.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Coi",
      "properties": {
        "coi.definitionsPath": {
          "type": "string",
          "default": "",
          "description": "Path to Coi definition files (.d.coi). Leave empty to use bundled definitions."
        },
        "coi.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Coi document formatting."
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@vscode/vsce": "^2.32.0"
  }
}
